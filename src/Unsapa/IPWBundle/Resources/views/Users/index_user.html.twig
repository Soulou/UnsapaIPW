{% extends 'UnsapaIPWBundle::layout.html.twig' %}
 
{% block title %}Utilisateurs{% endblock %}

{% block content %}

	<h3>Etudiants</h3>
	<ul>
	{% for user in users %}
		{% if user.roles[0] == "ROLE_STUDENT" %}
		<li>
		<a href="{{ path('users_show', { 'id': user.id })}}">
			{{ user.firstname }}
			{{ user.lastname }} : 
			Promo {{ user.promo }}
		</a>
		{% endif %}
	{% endfor %}
	</ul>
	
	<h3>Professeurs</h3>
	<ul>
	{% for user in users %}
		{% if user.roles[0] == "ROLE_TD" %}
		<li>
		<a href="{{ path('users_show', { 'id': user.id })}}">
			{{ user.firstname }}
			{{ user.lastname }}
		</a>
		{% endif %}
	{% endfor %}
	</ul>
	
{% endblock %}